<Window x:Class="Clinic.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Clinic"
        mc:Ignorable="d"
        Title="Смена пароля" Height="160" Width="300" WindowStartupLocation="CenterScreen" Icon="image/icon.png" MaxHeight="160" MinHeight="160" MinWidth="300" MaxWidth="300">
    <Grid>
        <Button x:Name="button" Content="Изменить" HorizontalAlignment="Left" Margin="57,83,0,0" VerticalAlignment="Top" Width="75" FontFamily="/Clinic;component/Fonts/#Gotham Pro" Height="21" BorderThickness="2" Click="button_Click"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="57,44,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="181" FontSize="14" FontFamily="/Clinic;component/Fonts/#Gotham Pro"/>
        <Label x:Name="label" Content="Введите новый пароль:" HorizontalAlignment="Left" Margin="57,14,0,0" VerticalAlignment="Top" FontSize="14" FontFamily="/Clinic;component/Fonts/#Gotham Pro"/>
        <Button x:Name="button_Copy" Content="Отмена" HorizontalAlignment="Left" Margin="163,83,0,0" VerticalAlignment="Top" Width="75" FontFamily="/Clinic;component/Fonts/#Gotham Pro" Height="21" BorderThickness="2" Click="button_Copy_Click"/>

    </Grid>
</Window>
